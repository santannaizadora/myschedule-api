// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  appointments Appointment[]

  @@map("users")
}

model Appointment {
  id           Int      @id @default(autoincrement())
  title        String
  date         String
  observation  String
  place        String
  initial_time String
  final_time   String

  user_id Int
  user    User @relation(fields: [user_id], references: [id])

  @@map("appointments")
}
